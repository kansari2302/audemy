{
  "manifest_version": 3,
  "name": "Real Discount Link Opener",
  "version": "1.0",
  "description": "Finds and opens the final offer link from real.discount tabs.",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.js"],
      "matches": ["https://real.discount/*", "https://www.real.discount/*"]
    },
    {
      "resources": ["udemy_content.js"],
      "matches": ["*://*.udemy.com/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Open Discount Links"
  },
  "background": {
    "service_worker": "background.js"
  }
}
